    "@types/safe-json-stringify": "^1.1.5",
    "@types/uuid": "^9.0.8",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "esbuild": "^0.20.1",
    "esbuild-sass-plugin": "^3.1.0",
    "html-minifier": "^4.0.0",
    "normalize.css": "^8.0.1",
    "postcss": "^8.4.35",
    "postcss-modules": "^6.0.0",
    "safe-json-stringify": "^1.2.0",
    "sass": "^1.71.1",
    "serve": "^14.2.1",
    "stylelint": "^16.2.1",
    "stylelint-config-standard-scss": "^13.0.0",
    "ts-standard": "^12.0.2",
